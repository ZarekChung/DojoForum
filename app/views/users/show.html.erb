<div class="container">
  <h1>Profile</h1>
  <div class="user-info">
    <div class="row">
      <div class="col-6 col-md-3">
        <div class="user-pic text-center">
          <%= image_tag @user.avatar,width:'200px' if @user.avatar?%>
        </div>
        <h6 class="text-center"><%=@user.name%></h6>
      </div>
      <div class="col-12 col-md-9">
        <div class="user-content">
          <div class="intro"><%=@user.intro%></div>
          <div class="text-right">
            <%if current_user == @user%>
              <%= link_to 'Edit' ,edit_user_path(@user) , class: "btn btn-secondary" %>
            <%end%>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="user-detail">
    <ul class="nav nav-tabs">
      <li class="nav-item">
        <a class="nav-link active" href="#">My Post</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#">My Comment</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#">My Collect</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#">My Draft</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#">My Friend</a>
      </li>
    </ul>
  </div>
</div>
