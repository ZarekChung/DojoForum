<div class="container">
  <div>
    <%= link_to 'Category List', admin_categories_path %>|
    <%#= link_to 'User List', admin_restaurants_path %>
    </div>
    <div class="form-group">
    <% if @category.errors.any? %>
      <%= @category.errors.full_messages.to_sentence %>
    <% end %>
    </div>
    <h1>Category List</h1>
    <div class="form-inline">
      <%= form_for [:admin, @category] do |f| %>
      <div class="form-group">
        <%= f.text_field :name, placeholder: "Category Name", class: "form-control" %>
        <%= f.submit class: "btn btn-secondary" %>
      </div>
    <% end %>
  </div>
  <div class="row">
    <div class="col-md-12">
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>#</th>
            <th>Category Name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <th scope="row"><%= category.id %></th>
              <td><%= category.name %></td>
              <td>
                <%= link_to 'Edit', admin_categories_path(id: category.id),class: "btn btn-secondary"%>
                <%= link_to 'Delete', admin_category_path(category), method: :delete,class: "btn btn-secondary", data: { confirm: "Are you sure?"} %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
