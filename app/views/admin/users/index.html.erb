<div class="container">
  <div class="navbar-collapse">
    <!-- Nav tabs -->
    <ul class="nav">
      <li class="nav-item">
        <%= link_to 'Category List', admin_categories_path , class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to 'User List', admin_users_path , class: "nav-link" %>
      </li>
    </ul>
  </div>
  <h1>User List</h1>
  <div class="row">
    <div class="col-md-12">
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Role</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <%= form_for [:admin, user] do |f| %>
            <tr>
              <td scope="row"><%= user.name%></td>
              <td><%= user.email %></td>
              <td>
                <%= f.select :role, [['Admin', 'admin'], ['Normal', 'normal']], :prompt => 'Select' %>
                <%= f.submit class: "btn btn-secondary"%>
              </td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
</div>
